# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /redeem/:id                 controllers.Application.redeem(id: Int)
GET     /waiting                    controllers.Application.waiting
GET     /echo                       controllers.Application.echo
GET     /helloWorld                 controllers.Application.helloWorld
GET     /goodbyeWorld               controllers.Application.goodbyeWorld

# Web crawling code
GET     /deadLinks                  controllers.LinkCrawler.deadLinks(url: String)
GET     /api/deadLinks              controllers.LinkCrawler.deadLinksSSE(url: String)

# Robots.txt
GET     /robots.txt                 controllers.Assets.at(path="/public", file="robots.txt")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# Test routes
GET     /test/redirect              controllers.TestDummy.redirect
GET     /test/infiniteRedirect      controllers.TestDummy.infiniteRedirect
GET     /test/timeout               controllers.TestDummy.timeout
GET     /test/notFound              controllers.TestDummy.notFound
GET     /test/internalError         controllers.TestDummy.internalError

# Yeoman Routes
GET     /ui                     	com.tuplejump.playYeoman.Yeoman.index
->      /ui/                    	yeoman.Routes
GET     /                       	com.tuplejump.playYeoman.Yeoman.redirectRoot(base="/ui/")